/* Platform configuration header for ServerLink */
/* This file is generated by CMake from config.h.in */

#ifndef SERVERLINK_CONFIG_H
#define SERVERLINK_CONFIG_H

/* Platform detection */
#cmakedefine SL_HAVE_WINDOWS @SL_HAVE_WINDOWS@

/* Platform I/O multiplexing support */
#cmakedefine SL_HAVE_IOCP @SL_HAVE_IOCP@
#cmakedefine SL_HAVE_WEPOLL @SL_HAVE_WEPOLL@
#cmakedefine SL_HAVE_EPOLL @SL_HAVE_EPOLL@
#cmakedefine SL_HAVE_KQUEUE @SL_HAVE_KQUEUE@
#cmakedefine SL_HAVE_SELECT @SL_HAVE_SELECT@

/* Event notification support */
#cmakedefine SL_HAVE_EVENTFD @SL_HAVE_EVENTFD@

/* TCP keepalive options */
#cmakedefine SL_HAVE_TCP_KEEPIDLE @SL_HAVE_TCP_KEEPIDLE@
#cmakedefine SL_HAVE_TCP_KEEPINTVL @SL_HAVE_TCP_KEEPINTVL@
#cmakedefine SL_HAVE_TCP_KEEPCNT @SL_HAVE_TCP_KEEPCNT@
#cmakedefine SL_HAVE_TCP_KEEPALIVE_VALS @SL_HAVE_TCP_KEEPALIVE_VALS@

/* Socket options */
#cmakedefine SL_HAVE_SO_NOSIGPIPE @SL_HAVE_SO_NOSIGPIPE@
#cmakedefine SL_HAVE_MSG_NOSIGNAL @SL_HAVE_MSG_NOSIGNAL@

/* IPC (Unix Domain Sockets) support */
#cmakedefine SL_HAVE_IPC @SL_HAVE_IPC@

/* C++20 Feature Support */
#cmakedefine01 SL_HAVE_CONCEPTS
#cmakedefine01 SL_HAVE_RANGES
#cmakedefine01 SL_HAVE_SPAN
#cmakedefine01 SL_HAVE_STD_FORMAT
#cmakedefine01 SL_HAVE_SOURCE_LOCATION
#cmakedefine01 SL_HAVE_THREE_WAY_COMPARISON
#cmakedefine01 SL_HAVE_LIKELY
#cmakedefine01 SL_HAVE_CONSTEVAL

/* Performance monitoring */
#cmakedefine SL_ENABLE_MONITORING

/* Determine the best I/O poller to use */
/* Priority: IOCP (Windows) > wepoll (Windows) > epoll (Linux) > kqueue (BSD/macOS) > select (fallback) */
#if SL_HAVE_IOCP
    #define SL_USE_IOCP 1
    #define SL_POLLER_NAME "iocp"
#elif SL_HAVE_WEPOLL
    #define SL_USE_WEPOLL 1
    #define SL_POLLER_NAME "wepoll"
#elif SL_HAVE_EPOLL
    #define SL_USE_EPOLL 1
    #define SL_POLLER_NAME "epoll"
#elif SL_HAVE_KQUEUE
    #define SL_USE_KQUEUE 1
    #define SL_POLLER_NAME "kqueue"
#elif SL_HAVE_SELECT
    #define SL_USE_SELECT 1
    #define SL_POLLER_NAME "select"
#else
    #error "No I/O multiplexing mechanism available"
#endif

/* Version information */
#define SL_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define SL_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define SL_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define SL_VERSION_STRING "@PROJECT_VERSION@"

#endif /* SERVERLINK_CONFIG_H */
